{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2018",
		"strict": true,
		"module": "ES2015",
		"moduleResolution": "node",
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noFallthroughCasesInSwitch": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
		"docs/**/*.js"
	],
	"exclude": [
		"dist/*",
	]
}
